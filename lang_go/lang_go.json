{
    "DisplayName": "Go",
    "PkgFile": "go.mod",
    "SrcFileExt": ".go",
    "PostGenTools": {
        "Format": {
            "Cmd": "gofmt -l -w -s -e {file}",
            "PerFile": true
        },
        "Check": [
            {
                "Cmd": "go build -trimpath -o /dev/null {files}",
                "Env": {
                    "GOCACHE": "{user_home_dir}/.cache/go-build",
                    "GO111MODULE": "off"
                }
            },
            {
                "Cmd": "go vet -C {dir}",
                "Env": {
                    "GOCACHE": "{user_home_dir}/.cache/go-build",
                    "GO111MODULE": "off"
                }
            }
        ]
    },
    "Dict": {
        "GoMod_GoVersion": "1.20"
    }
}
