{
    "DisplayName": "Go",
    "PkgFile": "go.mod",
    "SrcFileExt": ".go",
    "BaseTypeMapping": {
        "String": "string",
        "Uinteger": "uint",
        "Integer": "int",
        "Boolean": "bool",
        "Decimal": "float64",
        "DocumentUri": "DocumentURI",
        "URI": "URI"
    },
    "Dict": {},
    "PostGenTools": {
        "Format": {
            "Disabled": true,
            "Cmd": "gofmt -l -w -s -e {file}",
            "PerFile": true
        },
        "Check": [
            {
                "Cmd": "go build -trimpath -o /dev/null {files}",
                "Env": {
                    "GOCACHE": "{user_home_dir}/.cache/go-build",
                    "GO111MODULE": "off"
                }
            },
            {
                "Cmd": "go vet -C {dir}",
                "Env": {
                    "GOCACHE": "{user_home_dir}/.cache/go-build",
                    "GO111MODULE": "off"
                }
            }
        ]
    }
}
